<h2>Create new concert</h2>

<%= flash_message %>

<%= form_for [@concert] do |f| %>

  <%= f.label :band %>
  <%= f.text_field :band %>
  <br>
  <%= f.label :venue %>
  <%= f.text_field :venue %>
  <br>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <br>
  <%= f.label :date %>
  <%= f.date_field :date %>
  <br>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>
  <br>

  <%= f.submit 'Add'%>

<% end %>