<h2>Tickets of <%= @concert.band%></h2><br>
Day <%= @concert.date.strftime('%d/%m/%Y')%> in <%= @concert.venue%>, <%= @concert.city%><br>
The price is <%= @concert.price%><br>
<%= @concert.description%><br><br>
<h3>Comments</h3>

<% @comments.each do |comment| %>
<%= comment.comment%>
<%= comment.name%><br>
<% end %>

<h3>Add comment</h3>

<%= form_for [@concert, @comment] do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :comment %>
  <%= f.text_field :comment %>
  <br>
  <br>

  <%= f.submit 'Add'%>

<% end %>
